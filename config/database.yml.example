# SQLite version 3.x
#   gem install sqlite3
#
#   Ensure the SQLite 3 gem is defined in your Gemfile
#   gem 'sqlite3'
#
default: &default
  adapter: sqlite3
  pool: 5
  timeout: 5000

# Colorgy main database connection info
# The Crawler system would directly update its database
colorgy_main: &colorgy_main
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  host: localhost
  username:
  password:

development:
  <<: *default
  database: db/development.sqlite3

  colorgy_main:
    <<: *colorgy_main
    database: colorgy_development

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
  <<: *default
  database: db/test.sqlite3

  colorgy_main:
    <<: *colorgy_main
    database: colorgy_test

production:
  <<: *default
  database: db/production.sqlite3

  colorgy_main:
    <<: *colorgy_main
    database: colorgy_production
